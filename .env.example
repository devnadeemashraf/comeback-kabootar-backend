# App Env
PORT=3000
NODE_ENV=development
# Options: development, production, testing

# Logging
LOG_LEVEL=warn
# Highest <-- Lowest
# Options: fatal, error, warn, info, debug, trace

# Clustering
WEB_CONCURRENCY=0
# 0 = auto-detect CPU cores, or set a specific number (match the number of cores)

# Auth (JWT + cookie)
JWT_SECRET=
# Required when NODE_ENV is not "testing". Use a strong secret (e.g. openssl rand -base64 32)
JWT_EXPIRY=7d
JWT_ISSUER=comeback-kabootar-dev
# Optional. Set in production so tokens are bound to this API.
JWT_AUDIENCE=comeback-kabootar-dev
# Optional. Set so tokens cannot be used for another service.
AUTH_COOKIE_NAME=ck_session
FRONTEND_URL=http://localhost:5173
# Where to redirect after OAuth callback (e.g. login success).
BACKEND_URL=http://localhost:3000
# Base URL of this API; used for OAuth redirect_uri.

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Create credentials in Google Cloud Console (APIs & Services > Credentials). Redirect URI: ${BACKEND_URL}/api/v1/auth/google/callback

# Database Env
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
# use - openssl rand command to generate a strong password
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=comeback_kabootar_primary
# App default; use any DB name that matches your migrations.
POSTGRES_SSL_MODE=prefer
# Options: disable, allow, prefer, require, verify-ca, verify-full

DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
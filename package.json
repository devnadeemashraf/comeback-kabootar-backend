{
  "name": "comeback-kabootar-backend",
  "version": "0.1.0",
  "description": "The engine that brings replies back.",
  "license": "MIT",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "migrate": "node --import tsx node_modules/knex/bin/cli.js migrate:latest --knexfile knexfile.ts",
    "migrate:make": "node --import tsx node_modules/knex/bin/cli.js migrate:make --knexfile knexfile.ts",
    "migrate:rollback": "node --import tsx node_modules/knex/bin/cli.js migrate:rollback --knexfile knexfile.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPatterns=unit --passWithNoTests",
    "test:integration": "jest --testPathPatterns=integration --passWithNoTests",
    "test:e2e": "jest --testPathPatterns=e2e --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "saas",
    "automation",
    "api",
    "express",
    "typescript"
  ],
  "author": "Nadeem Ashraf <dev.nadeemashraf06@gmail.com>",
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "knex": "^3.1.0",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "packageManager": "pnpm@10.23.0"
}